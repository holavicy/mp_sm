/* pages/register/index.wxss */
.register{
  width: 100vw;
  height: 100vh;
  background: #F0F4FA;
}

.wrapper{
  background: #ffffff;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.wrapper .item{
  width: 100%;
  height: 112rpx;
  border-bottom: 1rpx solid #EEEEEE;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item .required{
  color: #EB6877;
  font-size: 24rpx;
  margin-right: 2rpx;
}

.item .left{
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  color:rgba(51,51,51,1);
}

.item .right{
  margin-right: 30rpx;
  font-size: 30rpx;
  flex-grow: 1;
  display: flex;
  justify-content: flex-end;
}

.item .right input{
  text-align: right;
  width: 90%;
}

.item .right .sex{
  width: 48rpx;
  height: 48rpx;
  display: block;
}

.sex.female{
  margin-left: 60rpx;
}

.item .right .type{
  height: 60rpx;
  line-height: 60rpx;
  border-radius:6rpx;
  border:1rpx solid rgba(204,204,204,1);
  text-align: center;
  color: #CCCCCC;
  font-size: 30rpx;
  padding: 0 23rpx;
  margin-left: 20rpx;
  box-sizing: border-box;
}

.item .right .type.active{
  border: 0;
  background: #023C6A;
  color: #FFFFFF;
}

.submit-btn {
  width:678rpx !important;
  height:94rpx;
  background:rgba(2,60,106,1);
  border-radius:6rpx;
  line-height: 94rpx;
  text-align: center;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin: 0 auto;
  margin-top: 80rpx;
  padding: 0;
}

.input-lh{
  color: #CFCFCF;
}

.picker{
  display: flex;
  align-items: center;
}
.arrow-right{
  width:14rpx;
  height:14rpx;
  border-top: 2rpx solid #CCCCCC;
  border-right: 2rpx solid #CCCCCC;
  box-sizing: border-box;
  margin-left: 12rpx;
  transform: rotate(45deg) skew(4deg,4deg);
}