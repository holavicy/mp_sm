/* pages/myShare/index.wxss */

page{
  background-color: #F0F4FA;
  height: 100%;
}

.my-share{
  padding-bottom: 30rpx;
}

.my-share .header{
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin: 48rpx 0 24rpx 30rpx;
}

.header .num{
  color: #023C6A;
}

.share-list{
  background-color: #FFFFFF;
}

.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 112rpx;
  border-bottom: 1rpx solid #EEEEEE;
  padding: 0 30rpx;
}

.item .left{
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}

.item .right{
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}

.item .right .time{
  color:rgba(51,51,51,1);
}