/* pages/myInfo/index.wxss */
page{
  background-color: #F0F4FA;
}

.my-info{
  padding-bottom: 30rpx;
}

.my-info .top{
  background-color: #ffffff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);

  padding-bottom: 36rpx;
}

.top image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: 36rpx 0;
}

.info{
  padding-left: 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.info .item{
  height: 112rpx;
  border-bottom: 1rpx solid #EEEEEE;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.info .item .right{
  margin-right: 30rpx;
}

.list{
  background-color: #ffffff;
  padding: 41rpx 30rpx 18rpx 30rpx;
}

.list .header{
  margin-bottom: 23rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.list .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 66rpx;
}

.list .item .name{
  flex-grow: 1;
  white-space: nowrap;
  overflow-x: hidden;
  text-overflow: ellipsis;
  margin-right: 10rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.list .item .time{

  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}