/* pages/invite/index.wxss */
page{
  background-color: #F0F4FA;
}

.invite{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tab-bar-wrapper{
  height: 144rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.image-wrapper{
  display: flex;
  flex-shrink: 1;
  flex-grow: 1;
  height: 100rpx;
  flex-direction: row;
  align-items: center;
}

.image-wrapper .item{
  width: 630rpx;
  height: 93%;
  margin: 0 18rpx;
}

.main-img{
  width: 630rpx;
  height:75%;
  display: block;
}

.bottom{
  background-color: #ffffff;
  box-shadow:0px 6rpx 12rpx 0rpx rgba(0,0,0,0.1);
  border-radius:0px 0px 8rpx 8rpx;
  height: 25%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.bottom .mini{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 35%;
  padding: 0 60rpx;
  box-sizing: border-box;
  font-size:24rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(2,60,106,1);
  text-shadow:0px 6px 12px rgba(0,0,0,0.1);
}

.mini-img{
  height:100%;
  width: 100rpx;
  display: block;
}

.btns{
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  height: 33%;
}

.btns .btn{
  width: 275rpx;
  height:100%;
  box-shadow:0rpx 6rpx 12rpx 0rpx rgba(0,0,0,0.1);
  border-radius:6rpx;
  font-size:34%;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  text-shadow:0rpx 6rpx 12rpx rgba(0,0,0,0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.btns .btn.left{
  background:#E8EDF1;
  color:rgba(2,60,106,1);
}

.btns .btn.right{
  background:rgba(2,60,106,1);
  color:rgba(255,255,255,1);
}