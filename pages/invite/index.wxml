<!--pages/invite/index.wxml-->
<view class="invite" catchtouchmove="{{true}}">
  <view class="view-wrapper">
    <view class="image-wrapper" style="left:{{left}}rpx">
      <view class="item {{currIndex == index?'active':''}}" wx:for="{{list}}"
      bindtouchstart="touchstart"
      bindtouchend="touchend">
        <image src="{{item.posterUrl}}" class="main-img"></image>
        <view class="bottom">
          <view class="mini">
            <view class="text">微信扫描二维码查看详情</view>
            <image src="{{item.miniUrl}}" class="mini-img"></image>
          </view>
          <view class="btns">
            <button class="btn left" open-type="share">分享</button>
            <view class="btn right" bindtap="saveImg">保存图片</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <tabbar selectedIndex="1" class="tab-bar-wrapper"></tabbar>
</view>
