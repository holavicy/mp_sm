/* pages/myJF/index.wxss */
page{
  background-color: #F0F4FA;
  height: 100%;
}

.top-wrapper{
  height: 424rpx;
  background:linear-gradient(180deg,rgba(2,60,106,1) 0%,rgba(240,244,250,1) 100%);
  padding-top: 29rpx;
  box-sizing: border-box;
  position: relative;
}

.top-wrapper .bg{
  width: 710rpx;
  height: 302rpx;
  margin: 0 auto;
  display: block;
}

.top-wrapper .top{
  position: absolute;
  top: 49rpx;
  left: 70rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}

.top-wrapper .top .jf-num{
  font-size:60rpx;
  font-family:DINAlternate-Bold,DINAlternate;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 12rpx;
}

.top-wrapper .bottom{
  position: absolute;
  top: 228rpx;
  left: 0;
  right: 0;
  padding: 0 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.top-wrapper .bottom .title{
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-bottom: 18rpx;
}

.top-wrapper .bottom .sub-info{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}

.top-wrapper .bottom .sign-btn{
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius:30rpx;
  border:1rpx solid rgba(2,60,106,1);
  padding: 0 41rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(2,60,106,1);
}

.jf-list{
  width: 710rpx;
  margin: 0 auto;
  margin-top: -74rpx;
  background-color: #ffffff;
  padding: 48rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  z-index: 1;
  position: relative;
  border-radius:24rpx 24rpx 0rpx 0rpx;
  padding-bottom: 30rpx;
}

.jf-list .header{
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:32rpx;
  margin-bottom: 10rpx;
}

.jf-list .item{
  width: 650rpx;
  height: 150rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  background:rgba(249,250,251,1);
  border-radius:24rpx;
  display: flex;
  align-items: center;
}

.jf-list .item .left{
  margin: 0 53rpx 0 30rpx;
  font-size:48rpx;
  font-family:DINAlternate-Bold,DINAlternate;
  font-weight:bold;
  color:rgba(57,181,74,1);

}

.jf-list .item .left .add{
  font-size: 36rpx;
}

.jf-list .item .right{

  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);

}

.jf-list .item .right .sub-info{

  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-top: 24rpx;

}