/* pages/home/index.wxss */
.home{
  background-color:#ffffff;
  width: 100vw;
  height: 100vh;
  position: relative;
}

.search-wrapper{
  width: 690rpx;
  height: 64rpx;
  background:rgba(245,245,245,1);
  border-radius:32rpx;
  margin: 28rpx auto;
  display: flex;
  align-items: center;
}

.search-wrapper image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 8rpx 0 24rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.search-wrapper input{
  font-size: 24rpx;
  width: 200rpx;
  flex-grow: 1;
}

.goods-list{
  width: 690rpx;
  margin: 0 auto;
  padding-bottom: 170rpx;
  padding-top: 20rpx;
}

.goods-list.iphonex{
  padding-bottom: 223rpx;
}

.goods-item {
  width: 690rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 4rpx 8rpx 0rpx rgba(117,146,180,0.16);
  border-radius:8rpx;
  border:1rpx solid rgba(245,245,245,1);
  margin-bottom: 20rpx;
}

.goods-item image{
  width: 690rpx;
  height: 210rpx;
  display: block;
  border-radius: 8rpx 8rpx 0 0;
}

.goods-item .name{
  height:30rpx;
  font-size:30rpx; 
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:30rpx;
  padding: 36rpx 30rpx 0 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.goods-item .time{
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:24rpx;
  padding: 24rpx 30rpx 36rpx 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.right-bottom{
  position: fixed;
  right: 31rpx;
  bottom: 208rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.right-bottom.iphoneX{
  bottom: 261rpx;
}

.shop-cart image{
  width: 120rpx;
  height: 120rpx;
  display: block;
}

.to-top{
  margin-bottom: 48rpx;
}

.to-top image{
  width: 60rpx;
  height: 60rpx;
}

.empty{
  width: 690rpx;
  height: 690rpx;
}