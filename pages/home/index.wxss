/* pages/home/index.wxss */
.home{
  background-color:#ffffff;
  width: 100vw;
  height: 100vh;
  margin-bottom: 98rpx;
}

.search-wrapper{
  width: 690rpx;
  height: 64rpx;
  background:rgba(245,245,245,1);
  border-radius:32rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  margin-top: 28rpx;
  margin-bottom: 48rpx;
}

.search-wrapper image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 8rpx 0 24rpx;
}

.search-wrapper input{
  font-size: 24rpx;
}

.goods-list{
  width: 690rpx;
  margin: 0 auto;
  padding-bottom: 128rpx;
}

.goods-item {
  width: 690rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4px 8px 0px rgba(117,146,180,0.16);
  border-radius:8px;
  border:1px solid rgba(245,245,245,1);
  margin-bottom: 20rpx;
}

.goods-item image{
  width: 690rpx;
  height: 200rpx;
  display: block;
}

.goods-item .name{
  height:30rpx;
  font-size:30rpx; 
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:30rpx;
  padding: 36rpx 30rpx 0 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.goods-item .time{
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:24rpx;
  padding: 24rpx 30rpx 36rpx 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}