/* pages/my/index.wxss */

.my{
  width: 100vw;
  height: 100vh;
  background-color: #F0F4FA;
}

.my .wrapper{
  background-color: #ffffff;
}

.my .info{
  height: 270rpx;
  padding: 0 36rpx 0 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #ffffff;
}

.info .info-left{
  font-size:48rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:48rpx; 
  margin-top: 48rpx;
}

.info-left .sub-info{
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:26rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.jf-button{
  width: 212rpx;
  height: 52rpx;
  line-height: 52rpx;
  background:rgba(255,255,255,1);
  border-radius:26rpx;
  border:1rpx solid rgba(197,198,199,1);
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-left: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.my .info .jf-button image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.my .info .user-img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-top: 36rpx;
}

.my .jf{
  padding: 0 30rpx;
  width: 690rpx;
  height: 88rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background:linear-gradient(90deg,rgba(236,191,139,1) 0%,rgba(253,212,165,1) 100%);
  box-shadow:0px 4rpx 12rpx 0rpx rgba(0,0,0,0.1);
  border-radius:8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.my .jf .left image{
  width: 30rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.my .jf .left text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(163,108,59,1);
}

.my .jf .right, .my .jf .left{
  display: flex;
  align-items: center;
  height: 88rpx;
}

.my .jf .right text{
  font-size:36rpx;
  font-family:DINAlternate-Bold,DINAlternate;
  font-weight:bold;
  color:rgba(163,108,59,1);
}

.arrow-right-jf{
  width:8rpx;
  height:8rpx;
  border-top: 4rpx solid rgba(163,108,59,1);
  border-right: 4rpx solid rgba(163,108,59,1);
  transform: rotate(45deg);
  margin-left: 25rpx;
}

.arrow-right-nav{
  width:14rpx;
  height:14rpx;
  border-top: 2rpx solid #CCCCCC;
  border-right: 2rpx solid #CCCCCC;
  margin-right: 30rpx;
  box-sizing: border-box;
  transform: rotate(45deg) skew(4deg,4deg);
}

.my .nav{
  margin-top: 48rpx;
}

.nav-item{
  display: flex;
  height: 120rpx;
  justify-content: space-between;
  align-items: center;
}
.nav-item .left{
  height: 120rpx;
  display: flex;
  align-items: center;
}

.nav-item .left image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx 0 30rpx;
}

.nav-item .right{
  border-bottom: 1rpx solid #EEEEEE;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100rpx;
  flex-grow: 1;
  height: 120rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  box-sizing: border-box;
}

button.contact{
  background-color: #ffffff !important;
  padding: 0 !important;
}