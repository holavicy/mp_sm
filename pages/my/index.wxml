<!--pages/my/index.wxml-->
<view class="my">
  <view class="wrapper">
    <view class="info">
      <view class="info-left">
        <view class="name">{{userInfo.name}}</view>
        <view class="sub-info">离家在外，给你宠爱～</view>
        <navigator class="jf-button" url="/pages/signIn/index" hover-class="none">
          <image src="../../images/qd.png"></image>
          签到领积分
        </navigator>
      </view>
      <image src="{{userInfo.avatar}}" class="user-img"></image>
    </view>
    <navigator class="jf" url="/pages/myJF/index" hover-class="none">
      <view class="left">
        <image src="../../images/jf.png"></image>
        <text>我的积分</text>
      </view>
      <view class="right">
        <text>{{userInfo.jfNum}}</text>
        <view class="arrow-right-jf"></view>
      </view>
    </navigator>
    <view class="nav">
    <navigator class="nav-item" url="/pages/myInfo/index" hover-class="none">
      <view class="left">
        <image src="../../images/info.png"></image>
      </view>
      <view class="right">
        我的信息
        <view class="arrow-right-nav"></view>
      </view>
    </navigator>
    <navigator class="nav-item" url="/pages/myShare/index" hover-class="none">
      <view class="left">
        <image src="../../images/share.png"></image>
      </view>
      <view class="right">
        我的推荐
        <view class="arrow-right-nav"></view>
      </view>
    </navigator>
    <navigator class="nav-item" url="/pages/officialAccounts/index" hover-class="none">
      <view class="left">
        <image src="../../images/gzgzh.png"></image>
      </view>
      <view class="right">
        关注公众号
        <view class="arrow-right-nav"></view>
      </view>
    </navigator>

    <view class="nav-item">
      <view class="left">
        <image src="../../images/kf.png"></image>
      </view>
      <button class="right contact" type="default" open-type="contact">
        我的客服
        <view class="arrow-right-nav"></view>
      </button>
    </view>

    </view>
  </view>

  <tabbar selectedIndex="2"></tabbar>
</view>
