/* components/tabbar/index.wxss */
.tab-bar{
  width: 100%;
  height: 98rpx;
  background-color: #FFFFFF;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 120rpx;
  box-sizing: border-box;
}

.tab-bar.iphoneX{
  height: 166rpx;
  padding-bottom: 68rpx;
}

.tab-bar-item .container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-bar-item.special{
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  top: -37rpx;
  right: 0;
  bottom: 0;
  left: 0;
}

.tab-bar-item.special .tab-bar-item-icon{
  width: 150rpx;
  height: 150rpx;
  margin: 0;
}

.tab-bar-item-icon{
  width: 44rpx;
  height: 44rpx;
  margin: 12rpx 0;
}

.tab-bar-item-text{
  font-size: 20rpx;
  color:rgba(204,204,204,1);
  text-shadow:0px -2px 8px rgba(0,0,0,0.04);
}

.tab-bar-item-text.selected{
  color: #023C6A;
}